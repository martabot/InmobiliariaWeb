@model Inmobiliaria_.Net_Core.Models.Inmueble


@{
    ViewData["Title"] = "Create";
}
@{
    var Lst = ViewBag.propis as IEnumerable<Inmobiliaria_.Net_Core.Models.Propietario>;
}

<h2>Agregar inmueble</h2>

<h6><a asp-action="Index">Cancelar</a></h6>
<hr />
<div class="row" style="margin-bottom:30px">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Propietario" class="control-label"></label>  &nbsp <a asp-controller="Propietarios" asp-action="Create">Agregar propietario</a>
                        <select asp-for="IdPropietario" class="form-control">
                            @foreach (Propietario item in Lst) {
                                <option value=@item.IdPropietario>@item.Nombre</option>
                            }
                        </select>
                        <span asp-validation-for="IdPropietario" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Ambientes" class="control-label"></label>
                        <input type="number" asp-for="Ambientes" class="form-control" />
                        <span asp-validation-for="Ambientes" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" type="number" class="form-control"/>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Categoria" class="control-label"></label>
                        <select asp-for="Categoria" class="form-control">
                            <option value="Casa">Casa</option>
                            <option value="Departamento">Departamento</option>
                            <option value="Local">Local</option>
                            <option value="Pocilga">Pocilga</option>
                        </select>
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Uso" class="control-label"></label>
                        <select asp-for="Uso" class="form-control">
                            <option value="Comercial">Comercial</option>
                            <option value="Residencial">Residencial</option>
                        </select>
                        <span asp-validation-for="Uso" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Transaccion" class="control-label"></label>
                        <select asp-for="Transaccion" class="form-control">
                            <option value="Alquiler">Alquiler</option>
                            <option value="Venta">Venta</option>
                            <option value="Permuta">Permuta</option>
                            <option value="Remata">Remata</option>
                        </select>
                        <span asp-validation-for="Transaccion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
