@model Inmobiliaria_.Net_Core.Models.Inmueble


@{
    ViewData["Title"] = "Edit";
}
@{
}

<h2>Editar inmueble</h2>

<h6><a asp-action="Index">Cancelar</a></h6>
<hr />
<div class="row" style="margin-bottom:30px">
    <div class="col-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-4 form-group">
                    <label asp-for="Propietario" class="control-label"></label>
                    <input type="text" value="@ViewBag.nombre" disabled />
                    <span class="text-danger"></span>
                </div>
                <div class="col-8 form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-group">
                    <label asp-for="Disponible" class="control-label"></label>
                    <select asp-for="Disponible" class="form-control" disabled>
                        <option value="0">Ocupado</option>
                        <option value="1">Disponible</option>
                    </select>
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="Ambientes" class="control-label"></label>
                    <input type="number" asp-for="Ambientes" class="form-control" />
                    <span asp-validation-for="Ambientes" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-group">
                    <label asp-for="Categoria" class="control-label"></label>
                    <select asp-for="Categoria" class="form-control">
                        <option value="Casa">Casa</option>
                        <option value="Departamento">Departamento</option>
                        <option value="Local">Local</option>
                        <option value="Pocilga">Pocilga</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="Uso" class="control-label"></label>
                    <select asp-for="Uso" class="form-control">
                        <option value="Residencial">Residencial</option>
                        <option value="Comercial">Comercial</option>
                        <option value="Eventos">Eventos</option>
                    </select>
                    <span asp-validation-for="Uso" class="text-danger"></span>
                </div>
                <div class="col-4 form-group">
                    <label asp-for="Transaccion" class="control-label"></label>
                    <select asp-for="Transaccion" class="form-control">
                        <option value="Alquiler">Alquiler</option>
                        <option value="Venta">Venta</option>
                        <option value="Permuta">Permuta</option>
                        <option value="Remata">Remata</option>
                    </select>
                    <span asp-validation-for="Transaccion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
