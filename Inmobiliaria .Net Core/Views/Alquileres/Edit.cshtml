@model Inmobiliaria_.Net_Core.Models.Alquiler

@{
    ViewData["Title"] = "Edit";
}


<h2>Fin de contrato de alquiler</h2>

<h6><a asp-action="Index">Cancelar</a></h6>
<hr />
<div class="row" style="margin-bottom:30px">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdInmueble" value="@Model.Inmueble.Id" />
            <p>Realizar cambio de fecha o multa para el contrado de alquiler entre <b>@ViewBag.trato </b></p>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" type="date" class="form-control" min="@Model.FechaInicio" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Multa" class="control-label"></label>
                <input asp-for="Multa" type="number" value="0.00" step="0.50" class="form-control" required />
                <span asp-validation-for="Multa" class="text-danger"></span>
            </div>
            <p class="text-danger">*Al presionar actualizar con una fecha de fin de contrato y una multa el contrato perderá vigencia.</p>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
