@model Inmobiliaria_.Net_Core.Models.Alquiler

@{
    ViewData["Title"] = "Delete";
    var pregunta = Model.Inmueble ?? null;
}

<h1>Eliminar alquiler</h1>

<h4><a asp-action="Index">Cancelar</a></h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @if (pregunta != null) {
                <input type="hidden" asp-for="IdInmueble" value="@Model.Inmueble.Id" />
            } else {
                <input type="hidden" asp-for="IdInmueble" />
            }
            <div class="form-group">
                Desea eliminar el Contrato de Alquiler entre el Locador <b> @ViewBag.trato </b> ?
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
