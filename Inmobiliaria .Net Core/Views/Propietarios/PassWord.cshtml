@model Inmobiliaria_.Net_Core.Models.Propietario

@{
    ViewData["Title"] = "PassWord";
    int id = Model.IdPropietario;
    string nombre = Model.Email;
}

<h2>Actualizar Contraseña de @nombre</h2>

<h6><a asp-action="index">Cancelar</a></h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PassWord" asp-route-id="@id" name="CambiarPass">
            <input type="hidden" asp-for="IdPropietario" />
            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" type="password"/>
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Clave Nueva</label>
                <input id="ClaveNueva" name="ClaveNueva" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label class="control-label">Repetir clave nueva</label>
                <input id="claveRepetida" name="claveRepetida" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
