@model Inmobiliaria_.Net_Core.Models.Busqueda
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    TempData["id"] = null;
}

    <center>
        <img src="https://noteges.blob.core.windows.net/archivosnoteweb/1832/logo.jpg" />

        @if (User.Identity.IsAuthenticated)
        {
            <form asp-action="Buscar">
                <div class="row justify-content-center">
                    <div class="col-9">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <select asp-for="Tabla" class="form-control">
                                    <option value="Propietarios">Propietario</option>
                                    <option value="Inquilinos">Inquilino</option>
                                    <option value="Inmuebles">Inmueble</option>
                                    <option value="Alquileres">Alquiler</option>
                                </select>
                            </div>
                            <input asp-for="Consulta" class="form-control" />
                            <div class="input-group-append">
                                <input type="submit" value="Buscar" class="form-control btn-outline-secondary" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        }

        

    </center>
