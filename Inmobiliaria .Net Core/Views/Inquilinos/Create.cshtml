@model Inmobiliaria_.Net_Core.Models.Inquilino

@{
    ViewData["Title"] = "Create";
}

<h2>Agregar inquilino</h2>

<h6><a asp-action="Index">Cancelar</a></h6>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create" style="margin-bottom:45px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" required/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" required/>
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Dni" class="control-label"></label>
                        <input asp-for="Dni" type="number" class="form-control" required/>
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" type="number" class="form-control" required />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Mail" class="control-label"></label>
                        <input asp-for="Mail" class="form-control" required/>
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="DireccionTrabajo" class="control-label"></label>
                        <input asp-for="DireccionTrabajo" class="form-control" required/>
                        <span asp-validation-for="DireccionTrabajo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="DniGarante" class="control-label"></label>
                        <input asp-for="DniGarante" type="number" class="form-control" required/>
                        <span asp-validation-for="DniGarante" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="TelGarante" class="control-label"></label>
                        <input asp-for="TelGarante" type="number" class="form-control" required/>
                        <span asp-validation-for="TelGarante" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
